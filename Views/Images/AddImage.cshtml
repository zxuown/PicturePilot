@model PicturePilot.Business.Models.ImageUploadViewModel;

@{
    ViewData["Title"] = "Add Image";
    Layout = "_Layout";
}
<form action="/Images/Add/Submit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" required>
    </div>
    <div class="form-group">
        <label for="ImageFile">Image</label>
        <input type="file" class="form-control-file" id="ImageFile" name="ImageFile" required>
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>