@model PicturePilot.Data.Entities.Image

@{
    ViewData["Title"] = "Image Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <img src="@Model.Url" class="card-img-top" alt="@Model.Title">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <div class="actions">
                        <button class="btn btn-outline-primary"><i class="fas fa-thumbs-up"></i></button>
                        <span>@Model.Favorites.Count</span>
                        <button class="btn btn-outline-secondary"><i class="fas fa-share"></i></button>
                        <button class="btn btn-outline-danger"><i class="fas fa-flag"></i></button>
                    </div>
                    <div class="user-info mt-3">
                        <img src="@Model.User.AvatarUrl" class="rounded-circle" width="30" height="30" alt="@Model.User.Name">
                        <span>@Model.User.Name</span>
                        <span class="text-muted">@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
                    </div>
                    <div class="comments mt-3">
                        <h6>Comments</h6>
                        @foreach (var comment in Model.Comments)
                        {
                            <div class="comment mb-2">
                                <strong>@comment.User.Name</strong>
                                <p>@comment.Text</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>