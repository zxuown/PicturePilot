@model IEnumerable<PicturePilot.Data.Entities.Image>

@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<div class="row">
    @foreach (var image in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@image.Url" class="bd-placeholder-img card-img-top" width="100%" height="225" alt="Image">
                <div class="card-body">
                    <p class="card-text">@image.Title</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="/View/Image/@image.Id" class="btn btn-outline-secondary"><i class="fas fa-eye"></i></a>
                            <button type="button" class="btn btn-outline-secondary like-btn" data-image-id="@image.Id">
                                <i class="fas fa-heart favorite"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary"><i class="fas fa-share-alt"></i></button>
                            <button type="button" class="btn btn-outline-secondary"><i class="fas fa-flag"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>